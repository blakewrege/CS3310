import scala.io.Source
import scala.collection.mutable.ListBuffer

object UserApp {

  def main(args: Array[String]) {
    val UIoutput = new UIoutput
    UIoutput.displayThis("\n-->> USERAPP started")

    val rawdata = new DataStorage()
