    val transaction = input.filterList(translist(count).toString(), rawdata.frombackup.split(",").toList)
    readtransaction(transaction)
    count = count + 1
    
    }

    
    
    
    UIoutput.displayThis("\n-->> USERAPP finished â€“ processed 14 transactions")
    
    
    
