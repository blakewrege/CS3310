import scala.io.Source
import scala.collection.mutable.ListBuffer

class UIinput(val filename: String) {

  def printList(args: List[_]): Unit = {
    val argarray = new ListBuffer[String]()
    var count = 0
    while (count < (args.length)) {
      if (args(count).toString().head != "%") {
        val words = args(count)
        argarray += words(1)
      }

      count = count + 1;

    }
  }

  val file = Source.fromFile(filename, "ISO-8859-1").getLines.toList

  val newfile = printList(file)

}